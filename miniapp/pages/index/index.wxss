.hero-card {
  margin-top: 4rpx;
}

.hero-head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: var(--space-8);
}

.trust-kicker {
  display: inline-flex;
  align-items: center;
  min-height: 44rpx;
  padding: 0 14rpx;
  border-radius: 999rpx;
  color: var(--color-primary);
  background: #edf4ff;
  border: 1rpx solid #d9e6ff;
  font-size: var(--font-size-12);
  font-weight: var(--font-semibold);
}

.text-input {
  min-height: 220rpx;
}

.preview-wrap {
  border: 1rpx solid var(--color-border);
  border-radius: 20rpx;
  background: #fafcff;
  padding: var(--space-8);
}

.preview {
  width: 100%;
  margin-top: var(--space-4);
  border-radius: 16rpx;
}

.record-item {
  margin-top: var(--space-8);
  border: 1rpx solid var(--color-border);
  border-radius: 20rpx;
  background: #fbfcfe;
  padding: var(--space-8);
}

.record-title {
  display: block;
  color: var(--color-text-primary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.wrap-row {
  flex-wrap: wrap;
}

.back-top {
  position: fixed;
  right: var(--space-12);
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  min-height: 72rpx;
  padding: 0 24rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  background: #ffffff;
  border: 1rpx solid var(--color-border);
  color: var(--color-text-secondary);
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.12);
  font-size: var(--font-size-12);
  z-index: 30;
}
