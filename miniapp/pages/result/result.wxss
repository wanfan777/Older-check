.hero-card {
  margin-top: 4rpx;
}

.claim-title {
  display: block;
  color: var(--color-text-primary);
  font-size: var(--font-size-18);
  line-height: var(--line-height-18);
  font-weight: var(--font-semibold);
}

.ocr-raw {
  border: 1rpx solid var(--color-border);
  border-radius: 16rpx;
  background: #fafcff;
  padding: var(--space-8);
  color: var(--color-text-secondary);
  font-size: var(--font-size-12);
  line-height: var(--line-height-12);
  max-height: 180rpx;
  overflow: hidden;
}

.score-text {
  font-size: var(--font-size-16);
  line-height: var(--line-height-16);
  color: var(--color-text-secondary);
  font-weight: var(--font-semibold);
}

.conclusion-line {
  display: block;
  color: var(--color-text-secondary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.reason-item {
  margin-top: var(--space-4);
  border-radius: 16rpx;
  border: 1rpx solid var(--color-border);
  background: #fafcff;
  padding: 14rpx 16rpx;
}

.reason-index {
  display: inline-flex;
  width: 36rpx;
  height: 36rpx;
  border-radius: 999rpx;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  line-height: 20rpx;
  color: var(--color-primary);
  background: #eaf2ff;
  font-weight: var(--font-semibold);
}

.reason-text {
  display: block;
  margin-top: 8rpx;
  color: var(--color-text-primary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.risk-item {
  margin-top: var(--space-4);
  padding: 12rpx 14rpx;
  border-radius: 14rpx;
  background: #fffbe6;
  border: 1rpx solid #ffe58f;
  color: #ad6800;
  font-size: var(--font-size-12);
  line-height: var(--line-height-12);
}

.evidence-item {
  margin-top: var(--space-8);
  border: 1rpx solid var(--color-border);
  border-radius: 20rpx;
  background: #ffffff;
  padding: var(--space-8);
}

.evidence-title {
  display: block;
  flex: 1;
  color: var(--color-text-primary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
  font-weight: var(--font-semibold);
}

.stance {
  display: inline-flex;
  min-height: 44rpx;
  align-items: center;
  justify-content: center;
  border-radius: 999rpx;
  padding: 0 12rpx;
  font-size: 22rpx;
  font-weight: var(--font-semibold);
}

.stance.support {
  background: var(--evidence-support-bg);
  color: var(--tag-trusted-text);
}

.stance.refute {
  background: var(--evidence-refute-bg);
  color: var(--tag-untrusted-text);
}

.stance.unrelated {
  background: var(--evidence-neutral-bg);
  color: var(--color-text-secondary);
}

.evidence-meta {
  display: block;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-12);
  line-height: var(--line-height-12);
}

.evidence-quote {
  display: block;
  color: var(--color-text-secondary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.step-item {
  margin-top: var(--space-4);
  color: var(--color-text-primary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.disclaimer {
  display: block;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-12);
  line-height: var(--line-height-12);
}

.feedback-option {
  display: flex;
  align-items: center;
  gap: var(--space-8);
  min-height: 72rpx;
}

.feedback-option-text {
  color: var(--color-text-primary);
  font-size: var(--font-size-14);
  line-height: var(--line-height-14);
}

.hidden-canvas {
  position: fixed;
  left: -9999px;
  top: -9999px;
  width: 640px;
  height: 900px;
}
