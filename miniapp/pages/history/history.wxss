.search-input {
  margin-top: 14rpx;
}

.list-card {
  margin-bottom: 0;
}

.history-item {
  margin-top: 14rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background: #f8fbff;
  border: 1rpx solid #e2e8f0;
}

.history-claim {
  display: block;
  color: #0f172a;
  font-size: 28rpx;
  line-height: 1.55;
}

.history-meta {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
}

.history-score {
  font-size: 24rpx;
  color: #334155;
}

.history-time {
  color: #94a3b8;
  font-size: 24rpx;
}
