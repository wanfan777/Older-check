<view class="page {{elderMode ? 'elder' : ''}}">
  <view wx:if="{{!record}}" class="card fade-in-up">
    <text class="section-title">记录不存在</text>
    <text class="section-desc">可能已被清空，请返回首页重新分析。</text>
  </view>

  <view wx:else>
    <view class="card overview-card fade-in-up">
      <text class="section-title">主张概览</text>
      <view class="meta-row top-gap">
        <text class="tag {{record.label}}">{{record.labelText}}</text>
        <text class="score">{{record.score}} / 100</text>
      </view>
      <text class="claim">{{record.claim}}</text>
    </view>

    <view class="card fade-in-up">
      <text class="section-title">解释</text>
      <text class="paragraph">{{record.result.explanation}}</text>
    </view>

    <view class="card fade-in-up">
      <text class="section-title">证据链</text>
      <view wx:if="{{record.result.evidences.length === 0}}" class="empty">暂无证据记录</view>

      <view wx:for="{{record.result.evidences}}" wx:key="id" class="timeline-item">
        <view class="timeline-dot"></view>
        <view class="timeline-body">
          <text class="evidence-title">{{item.title}}</text>
          <text class="evidence-meta">{{item.source}} · {{item.publish_time || '未知时间'}}</text>
          <text class="quote">{{item.quote}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
