/* Modern Trust UI tokens (1px ~= 2rpx) */
page {
  --color-primary: #1677ff;
  --color-primary-hover: #4096ff;
  --color-success: #52c41a;
  --color-warning: #faad14;
  --color-error: #f5222d;

  --color-text-primary: #1f2937;
  --color-text-secondary: #4b5563;
  --color-text-tertiary: #94a3b8;

  --color-bg-page: #f5f7fa;
  --color-bg-card: #ffffff;
  --color-border: #e5eaf1;
  --color-link: #1677ff;

  --tag-trusted-bg: #f6ffed;
  --tag-trusted-text: #389e0d;
  --tag-untrusted-bg: #fff1f0;
  --tag-untrusted-text: #cf1322;
  --tag-insufficient-bg: #fffbe6;
  --tag-insufficient-text: #d48806;

  --evidence-support-bg: #f6ffed;
  --evidence-refute-bg: #fff1f0;
  --evidence-neutral-bg: #fafafa;

  --font-size-12: 24rpx;
  --font-size-14: 28rpx;
  --font-size-16: 32rpx;
  --font-size-18: 36rpx;
  --font-size-20: 40rpx;

  --line-height-12: 36rpx;
  --line-height-14: 44rpx;
  --line-height-16: 48rpx;
  --line-height-18: 56rpx;
  --line-height-20: 60rpx;

  --font-regular: 400;
  --font-medium: 500;
  --font-semibold: 600;

  --radius-card: 24rpx;
  --radius-button: 20rpx;
  --radius-tag: 999rpx;

  --space-4: 8rpx;
  --space-8: 16rpx;
  --space-12: 24rpx;
  --space-16: 32rpx;
  --space-24: 48rpx;
  --space-32: 64rpx;

  --shadow-card: 0 4rpx 16rpx rgba(15, 23, 42, 0.06);
  --motion-fast: 150ms;
  --motion-base: 200ms;
  --motion-slow: 250ms;
}
